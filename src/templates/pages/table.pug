    hr
    details
        summary График
        form(method="GET")
            table
                tr
                    th Значение по оси X
                    th Результат
                tr
                    td
                        input(type="radio", name="radio")
                        | Субъект Федерации
                    td
                        input(type="checkbox", )
                        | Население
                tr
                    td
                        input(type="radio", name="radio")
                        | Год основания
                    td
