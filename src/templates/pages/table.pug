            ul
                li Название: 
                    input(type="text", )
                li Субъект Федерации: 
                    input(type="text", )
                li Год основания: 
                    input(type="text", )
                li Население от: 
                    input(type="text", )
                    | до:
                    input(type="text", )
                li Плотность от: 
                    input(type="text", )
                    | до:
                    input(type="text", )
    details
        summary Сортировка
        ul
            li Первый уровень
                select()
                    option(value="0") Нет
                    option(value="1") Название
                    option(value="2") Субъект Федерации
                    option(value="3") Год основания
                    option(value="4") Население
                    option(value="5") Плотность
                input(type="checkbox", )
                | По убыванию
            li Второй уровень
